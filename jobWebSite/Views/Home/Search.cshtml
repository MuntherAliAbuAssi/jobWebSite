@model IEnumerable<jobWebSite.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    <div class="panel panel-default" style="padding:15px">
        <h1 class="panel-heading">نتائج البحث </h1>
        <div class="row">
            @foreach (var subItem in Model)
            {

                <div class="col-md-3 thumbnail " style=" margin: 5px; border-radius: 10px;">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.JobContent)</h5>
                    <button class="btn btn-primary">
                      @Html.ActionLink("التفاصيل", "Details", new { jobId = subItem.Id })
                    </button>
                </div>
            }
        </div>
    </div>

