@model IEnumerable<jobWebSite.Models.ApplyForJob>

@{
    ViewBag.Title = "GetJobsByUser";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>جميع الوظائف المتقدم إليها من طرفكم</h2>
<div class="alert alert-danger" style="display:none">
    @{
        if (ViewBag.Result2 != null)
        {
            <h3>@ViewBag.Result2</h3>
        }
    }
</div>

<table class="table">
    <tr>
        <th>
            اسم الوظيفة
        </th>
        <th>
            الرسالة
        </th>
        <th>
           تاريخ الطلب
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.job.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                @Html.ActionLink("تفاصيل", "DetailsOfJob", new { id = item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>